package ejercicioB4;

public class Articulo {
	String nombre;
	double precio;
	int iva;
	int cuantosQuedan;
	
	public Articulo(String nombre, double precio, int iva, int cuantosQuedan){
		this.nombre = nombre;
		this.precio = precio;
		this.iva = iva;
		this.cuantosQuedan = cuantosQuedan;
		isAlpha(nombre);
	}
	public boolean isAlpha(String nombre) {
	    return nombre.matches("[a-zA-Z]+");
	}
}
